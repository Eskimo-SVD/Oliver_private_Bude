# Script-Name: check_pipe
exec 3>&1 # Ausgabekanal für stdout
exec 4>&1 # Ausgabekanal für exit-Status

eval `
{
   {
      who
      echo exit1=$? >&4
   } | {
      grep $1
      echo exit2=$? >&4
   } | wc –l
} 4>&1 >&3
`
echo "Pipestatus:"
echo "who : $exit1"
echo "grep: $exit2"
echo "wc  : $?"
