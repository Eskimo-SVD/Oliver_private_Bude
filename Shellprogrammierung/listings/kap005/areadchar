# Demonstriert das Einlesen einzelner Zeichen
# Name : areadchar

echo "Bitte eine Taste bet채tgen - mit q beenden"
char=''
# Terminal in den "rohen" Modus schalten
stty raw -echo
# In Schleife 체berpr체fen ob 'q' gedr체ckt wurde
while [ "$char" != "q" ]
do
   char=`dd bs=1 count=1 2>/dev/null`
done
# Den "rohen" Modus wieder abschalten
stty -raw echo

echo "Die Taste war $char"