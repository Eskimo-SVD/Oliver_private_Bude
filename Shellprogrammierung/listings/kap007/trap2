# Demonstriert die Funktion trap zum Abfangen von Signalen
# Name : trap2

# Signal SIGINT (2) (STRG+C)
trap 'echo SIGINT erhalten' 2
# Signal SIGTERM (15) kill -TERM PID_of_trap2
trap 'echo SIGTERM erhalten' 15

i=0
while [ $i -lt 5 ]
do
   echo "Bitte nicht st√∂ren! ($$)"
   sleep 5
   i=`expr $i + 1`
done